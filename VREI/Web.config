    <add key="FromAddress" value="noreply@vrei.org.ng" />
    <add key="FromName" value="VREI Website" />
    <add key="ToAddress" value="info@vrei.org.ng" />
    <add key="ToName" value="Customer Service" />
    <add key="SendMailOnError" value="true" />
